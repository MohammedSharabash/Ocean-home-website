@model IEnumerable<Ocean_Home.Models.Domain.ProjectImage>
@{
    ViewData["Title"] = "صور المشروع";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-fw fa-reply"></i> صور المشروع</h3>
    </div>
    <div class="panel-body">
        <div id="accordion" class="panel-group" aria-multiselectable="true" role="tablist">
            <div class="panel panel-success">
                @if (TempData["CountryErrors"] != null)
                {
                    var Errors = TempData["CountryErrors"] as List<string>;
                    <div class="alert alert-danger text-center p-5 m-5">
                        <ul style="list-style:none;">
                            @foreach (var error in Errors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }

                <div class="panel-heading collapsed" role="tab" id="headingOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <h4 class="panel-title">
                        <a class="pointer"><i class="fa fa-fw fa-plus"></i> إضافة صور المشروع</a>
                    </h4>
                </div>


                <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                    <div class="panel-body">

                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        @using (Html.BeginForm("Create", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row" style="margin:10px;">
                                <div class="col-lg-6 mb-10">
                                    <div class="form-group">
                                        <label for="NameAr" class="col-sm-5 control-label required">اسم الفيديو بالعربى: </label>
                                        <div class="col-sm-7">
                                            <input name="NameAr" type="text" id="NameAr" required class="form-control valid" />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-10">
                                    <div class="form-group">
                                        <label for="NameEn" class="col-sm-5 control-label required">اسم الفيديو بالانجليزى:</label>
                                        <div class="col-sm-7">
                                            <input name="Name" type="text" required id="Name" class="form-control valid" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 mb-10">
                                    <div class="form-group">
                                        <label for="NameEn" class="col-sm-5 control-label required">تقاصيل الفيديو بالعربى:</label>
                                        <div class="col-sm-7">
                                            <textarea name="DescriptionAr" required id="DescriptionAr" class="form-control valid" rows="7"> 
                                                                                               </textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 mb-10">
                                    <div class="form-group">
                                        <label for="NameEn" class="col-sm-5 control-label required">تفاصيل الفيديو بالانجليزى:</label>
                                        <div class="col-sm-7">
                                            <textarea name="Description" required id="DescriptionAr" class="form-control valid" rows="7"> 
                                                                                               </textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 mb-10">
                                    <div class="form-group">
                                        <label for="URL" class="col-sm-5 control-label required">: اللينك الخاص بالفيديو </label>
                                        <div class="col-sm-7">
                                            <input name="URL" type="text" id="URL" required class="form-control valid" />
                                        </div>
                                    </div>
                                </div>
                                @* <div class="col-lg-6 mb-10">
                            <div class="form-group">
                            <label for="PublitioAccountID" class="col-sm-5 control-label required">   حساب Publitio  : </label>
                            <div class="col-sm-7">
                            <select name="PublitioAccountID" required class="form-control valid">
                            @foreach (var item in accounts)
                            {
                            <option value="@item.Id">@item.name</option>
                            }
                            </select>

                            </div>
                            </div>
                            </div>
                            <div class="col-lg-6 mb-10">
                            <div class="form-group">
                            <label for="URL2" class="col-sm-5 control-label required">  كود الفيديو  : </label>
                            <div class="col-sm-7">
                            <input name="URL2" type="text" id="URL2" required class="form-control valid" />
                            </div>
                            </div>
                            </div> *@
                                <div class="col-lg-6 mb-10">
                                    <div class="form-group">
                                        <label for="Free" class="col-sm-5 control-label ">هل هذا الفيديو مجانى؟</label>
                                        <div class="col-sm-7">
                                            <input type="checkbox" data-val="true" id="Free" name="Free" value="true">

                                            <input name="Free" type="hidden" value="false" checked>

                                            <input name="CourseId" type="hidden" value="@ViewBag.Id" id="CourseId" hidden />

                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 mb-10">
                                    <div class="form-group">
                                        <label for="Sort" class="col-sm-5 control-label required">الترتيب:</label>
                                        <div class="col-sm-7">
                                            <input type="number" id="Sort" name="Sort" required class="form-control valid" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">إضافة</button>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 mb-10">
            @if (ViewBag.status == "D")
            {
                <a href="@Url.Action("Index")" class="btn btn-success">صور المشروع الحاليه</a>
            }
            else
            {
                <a href="@Url.Action("Index", new { q = "deleted" })" class="btn btn-danger">صور المشروع المحذوفه</a>
            }
        </div>
        <div class="table-responsive">
            <table id="table" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th style="text-align:center">الترتيب </th>
                        <th style="text-align:center ">الحالة</th>
                        <th style="text-align:center ">التحكم</th>
                    </tr>
                </thead>
                <tbody style="text-align:center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>

                                @item.Sort
                            </td>

                            <td>
                                @if (item.IsDeleted == true)
                                {
                                    <span class="badge bg-red">محذوف</span>
                                }
                                else
                                {
                                    <span class="badge bg-green">متاح</span>
                                }
                            </td>

                            <td>


                                <form method="post" asp-action="DeleteItem" asp-controller="Image">

                                    <input name="id" id="id" value="@item.Id" hidden />
                                    <div style="width: 100%; text-align: center;">
                                        <div style="display: inline-block;">
                                            <a asp-action="Edit" asp-controller="Image" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-edit"></i></a> <span>|</span>
                                        </div>

                                        <div style="display: inline-block;">
                                            @if (ViewBag.State != "D")
                                            {

                                                <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>

                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-info"><i class="fa fa-undo"></i></button>
                                            }
                                        </div>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    function Delete(url) {
        swal({
            title: "هل متأكد؟",
            text: "عند مسح هذا الفيديو سوف يتم نقله إلى صور المشروع المحذوفة",
            icon: "warning",
            dangerMode: true
        }).then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    type: "Post",
                    url: url,
                    success: function (data) {
                        if (data.success) {
                            toastr.success(data.message);
                            setInterval('location.reload()', 2500);
                        }
                        else {
                            toastr.error(data.message);
                        }
                    }
                })
            }
        })
    }
    function Resotre(url) {
        swal({
            title: "هل متأكد؟",
            text: "هل تريد استراجع هذا الفيديو مرة أخرى",
            icon: "success"
        }).then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    type: "Post",
                    url: url,
                    success: function (data) {
                        if (data.success) {
                            toastr.success(data.message);
                            setInterval('location.reload()', 2500);
                        }
                        else {
                            toastr.error(data.message);
                        }
                    }
                })
            }
        })
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

