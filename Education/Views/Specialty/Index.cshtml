@model IEnumerable<Ocean_Home.Models.Domain.Specialty>
@{
    ViewData["Title"] = "التخصص";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-fw fa-reply"></i> التخصص</h3>
    </div>
    <div class="panel-body">
        <div id="accordion" class="panel-group" aria-multiselectable="true" role="tablist">
            <div class="panel panel-success">
                @if (TempData["CountryErrors"] != null)
                {
                    var Errors = TempData["CountryErrors"] as List<string>;
                    <div class="alert alert-danger text-center p-5 m-5">
                        <ul style="list-style:none;">
                            @foreach (var error in Errors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }

                <div class="panel-heading collapsed" role="tab" id="headingOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <h4 class="panel-title">
                        <a class="pointer"><i class="fa fa-fw fa-plus"></i> إضافة التخصص</a>
                    </h4>
                </div>


                <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                    <div class="panel-body">

                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        @using (Html.BeginForm("Create", "Specialty", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row" style="margin:10px;">
                                <div class="col-lg-6 mb-10">
                                    <div class="form-group">
                                        <label for="Content" class="col-sm-5 control-label required">عنوان التخصص : </label>
                                        <div class="col-sm-7">
                                            <input name="Content" type="text" id="Content" required class="form-control valid" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 mb-10">
                                    <div class="form-group">
                                        <label for="NameEn" class="col-sm-5 control-label required">صورة التخصص:</label>
                                        <div class="col-sm-7">
                                            <input type="file" id="ImageFile" name="ImageFile" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 mb-10">
                                    <div class="form-group">
                                        <label for="Sort" class="col-sm-5 control-label required">الترتيب:</label>
                                        <div class="col-sm-7">
                                            <input type="number" id="Sort" name="Sort" required class="form-control valid" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">إضافة</button>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 mb-10">
            @if (ViewBag.State == "D")
            {
                <a href="@Url.Action("Index")" class="btn btn-success">التخصصات الحاليه</a>
            }
            else
            {
                <a href="@Url.Action("Index", new { q = "deleted" })" class="btn btn-danger">التخصصات المحذوفه</a>
            }
        </div>
        <div class="table-responsive">
            <table id="table" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th style="text-align:center">الترتيب</th>
                        <th style="text-align:center">الصورة</th>
                        <th style="text-align:center">عنوان التخصص </th>
                        <th style="text-align:center">الحالة </th>
                        <th style="text-align:center ">التحكم</th>
                    </tr>
                </thead>
                <tbody style="text-align:center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>

                                @item.Sort
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@Url.Content(item.ImageUrl != null ? ("/Images/Slider/" + item.ImageUrl) : "~/Content/assets/imgs/unnamed.jpg")" width="150" height="50" />

                                }
                                else
                                {
                                    <span>---</span>
                                }
                            </td>
                            <td>

                                @item.Content
                            </td>
                            <td>
                                @if (item.IsDeleted == true)
                                {
                                    <span class="badge bg-red">محذوف</span>
                                }
                                else
                                {
                                    <span class="badge bg-green">متاح</span>
                                }
                            </td>


                            <td>
                                <a asp-action="Edit" asp-controller="Specialty" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                <span>|</span>

                                @if (ViewBag.State != "D")
                                {
                                    <a onclick="Delete('Specialty/Delete?id=@item.Id')" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                }
                                else
                                {
                                    <a onclick="Resotre('Specialty/Delete?id=@item.Id')" class="btn btn-default"><i class="fa fa-undo"></i></a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    function Delete(url) {
        swal({
            title: "هل متأكد؟",
            text: "عند مسح هذا التخصص سوف يتم نقله إلى التخصصات المحذوفة",
            icon: "warning",
            dangerMode: true
        }).then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    type: "Delete",
                    url: url,
                    success: function (data) {
                        if (data.success) {
                            toastr.success(data.message);
                            setInterval('location.reload()', 2500);
                        }
                        else {
                            toastr.error(data.message);
                        }
                    }
                })
            }
        })
    }
    function Resotre(url) {
        swal({
            title: "هل متأكد؟",
            text: "هل تريد استراجع هذا التخصص مرة أخرى",
            icon: "success"
        }).then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    type: "Delete",
                    url: url,
                    success: function (data) {
                        if (data.success) {
                            toastr.success(data.message);
                            setInterval('location.reload()', 2500);
                        }
                        else {
                            toastr.error(data.message);
                        }
                    }
                })
            }
        })
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

