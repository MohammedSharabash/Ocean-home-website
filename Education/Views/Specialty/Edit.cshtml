@model Ocean_Home.Models.Domain.Specialty
@{
    ViewBag.Title = "تعديل ";
}

<h1 class="text-center mb-30">@ViewBag.Title</h1>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm("Edit", "Specialty", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(d => d.CreatedOn)
    @Html.HiddenFor(d => d.DeletedOn)
    @Html.HiddenFor(d => d.Id)
    @Html.HiddenFor(d => d.IsDeleted)
    @Html.HiddenFor(d => d.IsModified)
    @Html.HiddenFor(d => d.ModifiedOn)
    @Html.HiddenFor(d => d.ImageUrl)
    @Html.AntiForgeryToken()
    <div class="row" style="margin:10px;">
        <div class="col-lg-6 mb-10">
            <div class="form-group">
                <label for="Content" class="col-sm-5 control-label required">عنوان التخصص : </label>
                <div class="col-sm-7">
                    <input asp-for="Content" type="text" id="Content" required class="form-control valid" />
                </div>
            </div>
        </div>


        @if (Model.ImageUrl != null)
        {
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="Image" class="col-sm-5 control-label">صوره التخصص:</label>
                    <div class="col-sm-7">
                        <div class="input-group">
                            <img src="~/Images/Slider/@Model.ImageUrl" width="150" />
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="col-lg-6 mb-10">
            <div class="form-group">
                <label for="NameEn" class="col-sm-5 control-label required">تغير صورة التخصص:</label>
                <div class="col-sm-7">
                    <input name="Image" type="file" id="Image" class="form-control valid" />
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-10">
            <div class="form-group">
                <label for="Sort" class="col-sm-5 control-label required">الترتيب:</label>
                <div class="col-sm-7">
                    <input type="number" asp-for="Sort" name="Sort" required class="form-control valid" />
                </div>
            </div>
        </div>


    </div>
    <div class="row" style="margin:10px;">
        <div class="col-lg-6 mb-10">
            <div class="form-group">
                <label for="NameEn" class="col-sm-5 control-label required"></label>
                <div class="col-sm-7">
                    <button style="text-align:center !important" type="submit" class="btn btn-success">تعديل</button>
                </div>
            </div>

        </div>
    </div>


}